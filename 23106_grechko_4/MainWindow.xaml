<Window x:Class="_23106_grechko_4.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_23106_grechko_4"
        mc:Ignorable="d"
        Title="Grechko Variant 4" Height="300" Width="600">
    <Grid Margin="10">
        <Label Content="Введите предложение:" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <TextBox Name="InputTextBox" HorizontalAlignment="Stretch" VerticalAlignment="Top" Margin="0,25,0,0" Height="30"/>

        <Button Name="FormatButton" Content="Форматировать" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,80,0,0" Click="FormatButton_Click"/>

        <Label Content="Результат:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,100,0,0"/>
        <TextBox Name="OutputTextBox" HorizontalAlignment="Stretch" VerticalAlignment="Top" Margin="0,125,0,0" IsReadOnly="True" Height="30"/>
    </Grid>
</Window>
